{
  "manifest_version": 3,
  "name": "MobX DevTools",
  "version": "1.0.0",
  "description": "Redux DevTools처럼 MobX 상태를 추적하고 디버깅할 수 있는 Chrome 확장 프로그램",
  "devtools_page": "devtools.html",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

