{
  "manifest_version": 3,
  "name": "MobX DevTools",
  "version": "1.0.0",
  "description": "A Chrome extension to track and debug MobX state",
  "devtools_page": "devtools.html",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "panel/*", "lib/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
